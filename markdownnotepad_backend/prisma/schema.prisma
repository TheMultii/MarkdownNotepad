// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  username  String    @unique
  email     String    @unique
  name      String?
  surname   String?
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  notes     Note[]
  tags      NoteTag[]
  catalog   Catalog[]
}

model Note {
  id        String    @id @default(uuid())
  title     String
  content   String
  tags      NoteTag[]
  author    User      @relation(fields: [authorId], references: [id])
  authorId  String
  folder    Catalog?  @relation(fields: [folderId], references: [id])
  folderId  String?
  shared    Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model NoteTag {
  id        String   @id @default(uuid())
  owner     User     @relation(fields: [ownerId], references: [id])
  title     String
  color     String
  notes     Note[]
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Catalog {
  id        String   @id @default(uuid())
  title     String
  notes     Note[]
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EventLogs {
  id        String   @id @default(uuid())
  type      String
  message   String
  userId    String?
  noteId    String?
  tagId     String?
  catalogId String?
  ip        String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
